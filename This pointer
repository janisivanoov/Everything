#include <iostream>
#include <cstdlib>
using namespace std;
class where {
private:
	char chararray[10];
public:
	void reveal() {
		cout << "My address:" << this;
	}
};
int main() {
	system("chcp 1251 > nul");
	where w1, w2, w3;
	w1.reveal();
	w2.reveal();
	w3.reveal();
	cout << endl;
	system("pause >nul");
	return 0;
}
