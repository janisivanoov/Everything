#include <iostream>
#include <cstring>
using namespace std;
int main(){
void reversit(char[]));
const int max = 80;
char str[max];
cout<<"Enter a line:";
cin.get(str, max);
reversit(str);
cout<<"Flipped line:";
cout<<str<<endl;
return 0;
}
void reversit(char s[])){
int len = strlen(s);
for(int k=0;k<len/2;k++){
char temp = s[k];
s[k]==s[len-k-1];
s[len-k-1]==temp;
}
}
