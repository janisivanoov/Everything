#include <iostream>
#include <cstdlib>
using namespace std;
int main(){
system("chcp 1251 > nul");
int* size;
size=new int;
cout<<"Enter size of array:";
cin>>*size;
char* symbs;
symbs=new char[*size];
for(int i=0;i<*size;i++){
symbs[i]='a'+i;
cout<<symbs[i]<<" ";
}
delete[]symbs;
delete size;
cout<<"Array and variable already deleted!"<<endl;
system("pause > nul");
return 0;
}
